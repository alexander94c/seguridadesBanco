<%- layout('layouts/main.ejs') %>

<div class="row">
    <div class="col-md-5 mt-5 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/login" method="POST">
                    <div class="card-header text-center">
                        <h2>
                            Login Usuario 
                        </h2>
                    </div>
                    <br/>
                    <div class="form-group">
                        <input type="text" name="email" placeholder="Ingresa el usuario" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Ingresa el password" class="form-control">
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block mt-4">
                        Ingresar al Sistema
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>